<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/comments_header_nitter_container"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/comments_header_nitter_text"
        android:textColor="?attr/storyColorNormal"
        android:textSize="15sp"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans" />

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_action_web"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/comments_header_nitter_date"
            android:fontFamily="@font/product_sans"
            android:text="2023-05-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="4dp"
            android:id="@+id/comments_header_nitter_user_icon"
            android:src="@drawable/ic_action_user"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/comments_header_nitter_user_name"
            android:fontFamily="@font/product_sans"
            android:text="John Smith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comments_header_nitter_user_tag"
            android:fontFamily="@font/product_sans"
            android:text="johnsmith"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_action_web"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/comments_header_nitter_reply_count"
            android:fontFamily="@font/product_sans"
            android:text="12 replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comments_header_nitter_reposts"
            android:fontFamily="@font/product_sans"
            android:text="3,709 reposts"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comments_header_nitter_quotes"
            android:fontFamily="@font/product_sans"
            android:text="118 quotes"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comments_header_nitter_likes"
            android:fontFamily="@font/product_sans"
            android:text="4,651 likes"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
